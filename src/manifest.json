{
  "manifest_version": 3,
  "name": "ReverseATS Job Matcher",
  "version": "1.0",
  "description": "Match your resume to job postings with cosine similarity analysis",
  "icons": {
    "48": "image48.png",
    "128": "image128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "image48.png",
      "128": "image128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://waterlooworks.uwaterloo.ca/myAccount/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://waterlooworks.uwaterloo.ca/*"
  ]
} 