{
  "manifest_version": 3,
  "name": "WaterlooWorks TR Counter",
  "version": "1.0",
  "description": "Counts and displays the number of table rows on WaterlooWorks job page",
  "icons": {
    "48": "image48.png",
    "128": "image128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://waterlooworks.uwaterloo.ca/myAccount/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
} 